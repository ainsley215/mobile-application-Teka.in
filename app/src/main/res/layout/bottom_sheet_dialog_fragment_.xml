<!-- bottom_sheet_teacher_details.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp">

    <!-- Data Diri Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Diri"
        android:textSize="@dimen/_13sdp"
        android:paddingTop="@dimen/_0sdp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:id="@+id/groupdatadiri"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginLeft="@dimen/_0sdp"
        android:layout_marginTop="@dimen/_5sdp">

        <View
            android:id="@+id/kotakgrey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/detailguru" />

        <ImageView
            android:id="@+id/profilepic"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/guru3"
            android:contentDescription="Student Image"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"/>

        <LinearLayout
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_0sdp"
            android:paddingTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_75sdp">

            <!-- Nama -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Nama"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=":"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="(Isi Nama)"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <!-- TTL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="TTL"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=":"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="(Isi TTL)"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <!-- Jenis Kelamin -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_2sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Jenis Kelamin"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text=":"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="(Isi Jenis Kelamin)"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <!-- Agama -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Agama"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=":"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="(Isi Agama)"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <!-- no telp -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="No Telepon"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=":"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="(Isi No Tel)"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <!-- Alamat -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Alamat"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=":"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="(Isi Alamat)"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <!-- Details with information like TTL, Gender, Religion, etc. -->
    <!-- Repeat for other details as necessary -->

    <!-- Tentang Saya Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tentang Saya"
        android:textSize="@dimen/_13sdp"
        android:paddingTop="@dimen/_16sdp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/textViewAboutTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saya adalah seorang guru yang berdedikasi..."
        android:paddingTop="@dimen/_8sdp"/>
</LinearLayout>