<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp"/>

        <ImageView
            android:id="@+id/buttonDashboard"
            android:layout_width="@dimen/_33sdp"
            android:layout_height="@dimen/_33sdp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_21sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_28sdp"
            android:src="@drawable/kembali" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pembayaran"
            android:textSize="@dimen/_16sdp"
            android:textColor="#646464"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_16sdp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_100sdp"/>

    <!-- Filter Tabs -->
    <HorizontalScrollView
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:padding="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semua"
                android:backgroundTint="#229799"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hari Ini"
                android:layout_marginStart="@dimen/_8sdp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#8A3B73" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minggu Ini"
                android:layout_marginStart="@dimen/_8sdp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#8A3B73" />

            <!-- Add more filter buttons similarly -->

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Announcements List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPengumuman"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_490sdp"
        android:layout_below="@id/filter"
        android:padding="@dimen/_16sdp" />

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        app:itemTextColor="@color/nav_item_color_selector"
        app:itemIconTint="@color/nav_item_color_selector"/>

</RelativeLayout>
