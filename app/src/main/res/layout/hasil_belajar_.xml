<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_16sdp">

    <!-- Header -->
    <ImageView
        android:id="@+id/buttonDashboard"
        android:layout_width="@dimen/_33sdp"
        android:layout_height="@dimen/_33sdp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_minus2sdp"
        android:layout_marginEnd="@dimen/_28sdp"
        android:src="@drawable/kembali" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Siswa"
        android:textSize="@dimen/_16sdp"
        android:textColor="#646464"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_16sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_100sdp"/>

    <View
        android:id="@+id/kotakhijau"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@drawable/search_view_background"
        android:elevation="@dimen/_5sdp" />

    <ImageView
        android:id="@+id/teacher"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:src="@drawable/hasilbelajar"
        android:layout_marginTop="@dimen/_45sdp"
        android:elevation="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/textmotivasi"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_70sdp"
        android:text="Ayo terus asah minat, bakat serta keterampilanmu. Jangan mudah putus asa untuk mencapai semua cita - citamu."
        android:textColor="#ffffff"
        android:textSize="@dimen/_10sdp"
        android:gravity="center"
        android:textStyle="bold"
        android:elevation="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_marginStart="@dimen/_90sdp"/>

    <View
        android:id="@+id/line"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_3sdp"
        android:background="@drawable/garisabuabu"
        android:layout_marginTop="@dimen/_160sdp"
        android:layout_marginStart="@dimen/_25sdp"/>

    <RelativeLayout
        android:id="@+id/groupdatadiri"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_175sdp">

        <View
            android:id="@+id/kotakgrey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/garisabuabu"/>

        <ImageView
            android:id="@+id/profilepic"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/ic_profile_placeholder"
            android:contentDescription="Student Image"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"/>

        <LinearLayout
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_0sdp"
            android:paddingTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_75sdp">

            <!-- Nama -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Nama"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=":"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="(Isi Nama)"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <!-- NISN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="NISN"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=":"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="(Isi NISN)"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <!-- Jenis Kelamin -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_2sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Jenis Kelamin"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text=":"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="(Isi Jenis Kelamin)"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <!-- Golongan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Golongan"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=":"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="(Isi Golongan)"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <!-- Wali Kelas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Wali Kelas"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=":"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="(Isi Wali Kelas)"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <!-- Alamat -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Alamat"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=":"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="(Isi Alamat)"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/infob"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_300sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:background="@drawable/garisabuabu"/>
    
    <TextView
        android:id="@+id/infobtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informasi Hasil Belajar Siswa"
        android:textSize="@dimen/_13sdp"
        android:textColor="#229799"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_16sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_304sdp"
        android:layout_marginStart="@dimen/_100sdp"/>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_340sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_16sdp"
            android:background="#F5F5F5"
            android:layout_marginTop="@dimen/_0sdp">

            <!-- Kotak Hijau 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16sdp"
                android:background="#009688"
                android:text="Nilai agama dan budi pekerti"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="@dimen/_13sdp"/>

            <!-- Space untuk nilai atau komentar guru -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#E0E0E0"
                android:text="Komentar/Nilai: "
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:layout_marginBottom="16dp"/>

            <!-- Kotak Hijau 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="#009688"
                android:text="Jati Diri"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="@dimen/_13sdp"/>

            <!-- Space untuk nilai atau komentar guru -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#E0E0E0"
                android:text="Komentar/Nilai: "
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_16sdp"/>

            <!-- Kotak Hijau 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="#009688"
                android:text="Dasar Literasi dan Matematika, Sains, Teknologi"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="@dimen/_13sdp"/>

            <!-- Space untuk nilai atau komentar guru -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#E0E0E0"
                android:text="Komentar/Nilai: "
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_16sdp"/>

            <!-- Kotak Hijau 4 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="#009688"
                android:text="Projek Penguatan Profil Pelajaran Pancasila"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="@dimen/_13sdp"/>

            <!-- Space untuk nilai atau komentar guru -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#E0E0E0"
                android:text="Komentar/Nilai: "
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_16sdp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>