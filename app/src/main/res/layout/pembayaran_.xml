<!-- res/layout/activity_payment.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp">

    <ImageView
        android:id="@+id/buttonDashboard"
        android:layout_width="@dimen/_33sdp"
        android:layout_height="@dimen/_33sdp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_minus2sdp"
        android:layout_marginEnd="@dimen/_28sdp"
        android:src="@drawable/kembali" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pembayaran"
        android:textSize="@dimen/_16sdp"
        android:textColor="#646464"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_16sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_minus30sdp"
        android:layout_marginStart="@dimen/_100sdp"/>

    <View
        android:id="@+id/infob"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:background="#229799"/>

    <TextView
        android:id="@+id/infobtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informasi Hasil Belajar Siswa"
        android:textSize="@dimen/_13sdp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_16sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_minus22sdp"
        android:layout_marginStart="@dimen/_55sdp"/>

    <RelativeLayout
        android:id="@+id/groupdatadiri"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_0sdp">

        <View
            android:id="@+id/kotakgrey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/garisabuabu"/>

        <ImageView
            android:id="@+id/profilepic"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/ic_profile_placeholder"
            android:contentDescription="Student Image"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"/>

        <LinearLayout
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_0sdp"
            android:paddingTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_75sdp">

            <!-- Nama -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Nama"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=":"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="(Isi Nama)"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <!-- NISN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="NISN"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=":"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="(Isi NISN)"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <!-- Jenis Kelamin -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_2sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Jenis Kelamin"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text=":"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="(Isi Jenis Kelamin)"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <!-- Golongan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Golongan"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=":"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="(Isi Golongan)"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <!-- Wali Kelas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Wali Kelas"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=":"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="(Isi Wali Kelas)"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <!-- Alamat -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Alamat"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=":"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="(Isi Alamat)"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <!-- Dropdown Tahun -->
    <Spinner
        android:id="@+id/spinnerYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/rectangle_344_shape"
        android:entries="@array/year_array" />

    <!-- Tabel Pembayaran -->
    <TableLayout
        android:id="@+id/tablePayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:stretchColumns="1">

        <TableRow>
            <TextView android:text="No"
                android:gravity="center"/>
            <TextView android:text="Bulan"
                android:gravity="center" />
            <TextView android:text="Tanggal"
                android:gravity="center"/>
            <TextView android:text="Status"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>
</LinearLayout>